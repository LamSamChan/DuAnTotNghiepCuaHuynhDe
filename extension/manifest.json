{
  "manifest_version": 3,
  "name": "USB Token Reader",
  "version": "1.0",
  "description": "Reads USB token",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/16x16.png",
      "32": "/images/32x32.png",
      "48": "/images/48x48.png",
      "128": "/images/128x128.png"
    },
    "default_title": "TECH SEAL - Signing With USB Token"
  },
  "icons": {
    "16": "/images/16x16.png",
    "32": "/images/32x32.png",
    "48": "/images/48x48.png",
    "128": "/images/128x128.png"
  },
  "permissions": ["usb"],
  "host_permissions": ["activeTab"],
  "background": {
    "service_worker": "popup.js"
  }
}
