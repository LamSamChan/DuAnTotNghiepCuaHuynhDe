@using Microsoft.AspNetCore.Hosting
@inject IWebHostEnvironment _hostingEnvironment

@{
    // Lấy link trực ảnh từ file tỉnh
    string folderPath = System.IO.Path.Combine(_hostingEnvironment.WebRootPath, "ContractImage"); // + thêm ID của contract

    string folderItem = System.IO.Path.Combine(folderPath, "8");

    string[] imageFiles = Directory.GetFiles(folderItem);
}
<div class="container-fluid">
    <div class=" block justify-between items-center p-4  mt-4 mb-6 bg-white rounded-2xl shadow-xl shadow-gray-200 lg:p-5 sm:flex rounded">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <i class="ph-bold ph-house" style="font-size: 20px; margin: auto 5px;"></i>
                <li class="breadcrumb-item"> <a>Trang chủ</a></li>
                <li class="breadcrumb-item active" aria-current="page"> Hợp đồng đã hoàn thành</li>
            </ol>
        </nav>
        <h1 class="typeHead">CHI TIẾT HỢP ĐỒNG </h1>
        <div class="row justify-content-between">
            <a class="col-md-2 button-design">
                <i class="ph-bold ph-arrow-left"></i>
                QUAY LẠI
            </a>
            <a class="col-md-2 button-delete">
                KẾT THÚC HỢP ĐỒNG
            </a>
        </div>
        
    </div>
    <div class="row" style="background-color:#FFFFFF; margin: 20px auto; height:100%; border-radius:16px;">
        <div class="col-6" style="margin: 20px;">
            <div class="showFile">
                <div class="row justify-content-between" style="margin:auto;">
                    <h4 style="color: #4318FF; font-family:Source Sans Pro;" class="col-5">Hợp đồng đang hiệu lực </h4>
                    <button class="custom-file-upload col-1" data-bs-toggle="modal" data-bs-target="#ShowContract" style="width:30px; height:30px;">
                        <i class="ph-bold ph-frame-corners" style="font-size:30px; margin: auto;"></i>
                    </button>
                </div>
                <div id="myCarousel" class="carousel slide" style=" width:100%;height: 750px;">
                    <div class="carousel-inner">
                        <div class="carousel-item active ">
                            <img src="~/Resource/Image/LOGO/1.png" alt="Hình ảnh" width="100%" />
                        </div>
                        @foreach (var imgPath in imageFiles)
                        {
                            <div class="carousel-item" style="max-height: 800px;overflow-y: scroll;">
                                <img src="@Url.Content(folderItem+ "/" + System.IO.Path.GetFileName(imgPath))" alt="Hình ảnh" width="100%" />
                            </div>
                        }
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev" style="margin: auto;background-color: black;font-size: 100px;width: 50px;height: 100px;">
                        <span class="carousel-control-prev-icon" aria-hidden="true" style="width:20px; height:20px;"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button style="margin: auto;background-color: black;font-size: 100px; width: 50px;height: 100px;" class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true" style="width:20px; height:20px;"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>

                <!--Show hợp đồng to-->
                <!-- Modal -->
                <div class="modal fade" id="ShowContract" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                    <div class="modal-dialog modal-xl modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div id="myCarouselModal" class="carousel slide">
                                    <div class="carousel-inner">
                                        <div class="carousel-item active ">
                                            <img src="~/Resource/Image/LOGO/1.png" alt="Hình ảnh" width="100%" />
                                        </div>
                                        @foreach (var imgPath in imageFiles)
                                        {
                                            <div class="carousel-item" style="max-height: 800px;overflow-y: scroll;">
                                                <img src="@Url.Content(folderItem+ "/" + System.IO.Path.GetFileName(imgPath))" alt="Hình ảnh" width="100%" />
                                            </div>
                                        }
                                    </div>
                                    <button class="carousel-control-prev" type="button" data-bs-target="#myCarouselModal" data-bs-slide="prev" style="margin: auto;background-color: black;font-size: 100px;width: 50px;height: 100px;">
                                        <span class="carousel-control-prev-icon" aria-hidden="true" style="width:20px; height:20px;"></span>
                                        <span class="visually-hidden">Previous</span>
                                    </button>
                                    <button style="margin: auto;background-color: black;font-size: 100px; width: 50px;height: 100px;" class="carousel-control-next" type="button" data-bs-target="#myCarouselModal" data-bs-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true" style="width:20px; height:20px;"></span>
                                        <span class="visually-hidden">Next</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="inforCus col-5 mt-4" style="max-height:800px; overflow-y: scroll; ">
            <h4 style="color: #4318FF;font-family: Source Sans Pro;">
                Thông tin khách hàng
            </h4>
            <form class="row g-3" style="max-width:950px;">
                <div class="col-md-6">
                    <label for="inputName" class="form-label">Họ và tên</label>
                    <input type="text" class="form-input" id="inputName" placeholder="Họ và tên">
                </div>
                <div class="col-md-3">
                    <label for="inputState" class="form-label">Giới tính</label>
                    <select id="inputState" class="form-select">
                        <option selected>Nam</option>
                        <option>Nữ</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label for="inputCCCD" class="form-label">CCCD/CMND</label>
                    <input type="text" class="form-input" id="inputCCCD" placeholder="CCCD/CMND">
                </div>
                <div class="col-md-5">
                    <label for="inputPhone" class="form-label">Số điện thoại</label>
                    <input type="text" class="form-input" id="inputPhone" placeholder="Số điện thoại">
                </div>
                <div class="col-md-6">
                    <label for="inputEmail4" class="form-label">Địa chỉ Email</label>
                    <input type="email" class="form-input" id="inputEmail4" placeholder="Địa chỉ Email">
                </div>
                <div class="col-md-5">
                    <label for="inputAddress" class="form-label">Nơi ở</label>
                    <input type="text" class="form-input" id="inputAddress" placeholder="Địa chỉ nơi ở">
                </div>
                <div class="col-md-6">
                    <label for="inputEmail4" class="form-label">Mã hợp đồng</label>
                    <input type="email" class="form-input" id="inputEmail4" placeholder="IDxxx">
                </div>
                <div class="col-md-5">
                    <label for="inputAddress" class="form-label">Loại dịch vụ đã đăng ký</label>
                    <input type="text" class="form-input" id="inputAddress" placeholder="WIFI">
                </div>
                <div class="col-md-6">
                    <label for="inputEmail4" class="form-label">Ngày tạo</label>
                    <input type="email" class="form-input" id="inputEmail4" placeholder="IDxxx">
                </div>
                <div class="col-md-5">
                    <label for="inputAddress" class="form-label">Mã Biên bản lắp </label>
                    <input type="text" class="form-input" id="inputAddress" placeholder="WIFI">
                </div>
                <h4 style="color: #4318FF;font-family: Source Sans Pro; padding-top:30px;">
                    Thông tin nhân viên tạo hợp đồng
                </h4>
                <div class="col-md-6">
                    <label for="inputEmail4" class="form-label">Mã nhân viên</label>
                    <input type="email" class="form-input" id="inputEmail4" placeholder="IDxxx">
                </div>
                <div class="col-md-5">
                    <label for="inputAddress" class="form-label">Họ và tên</label>
                    <input type="text" class="form-input" id="inputAddress" placeholder="WIFI">
                </div>
                <div class="col-md-6">
                    <label for="inputEmail4" class="form-label">Email</label>
                    <input type="email" class="form-input" id="inputEmail4" placeholder="IDxxx">
                </div>
                <div class="col-md-5">
                    <label for="inputAddress" class="form-label">Số điện thoại</label>
                    <input type="text" class="form-input" id="inputAddress" placeholder="WIFI">
                </div>
            </form>
        </div>

    </div>
</div>
<script>
    $(document).ready(function () {
        $('#myCarousel').carousel({
            interval: false
        });
    });
    $(document).ready(function () {
        $('#myCarouselModal').carousel({
            interval: false
        });
    });
</script>


