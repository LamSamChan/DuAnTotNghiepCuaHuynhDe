<div class="container-fluid">
    <div class=" block justify-between items-center p-4  mt-4 mb-6 bg-white rounded-2xl shadow-xl shadow-gray-200 lg:p-5 sm:flex">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <i class="ph-bold ph-house" style="font-size: 20px; margin: auto 5px;"></i>
                <li class="breadcrumb-item"> <a>Trang chủ</a></li>
                <li class="breadcrumb-item"><a>Quản lý khách hàng</a></li>
                <li class="breadcrumb-item active" aria-current="page"> Danh sách khách hàng</li>
            </ol>
        </nav>
        <h1 class="typeHead">TẠO HỢP ĐỒNG</h1>
    </div>
    <div style="margin-top: 30px;">
        <form class="row justify-content-around" style=" margin: 0 auto;" method="post" >
            <div class="col-md-5">
                <div class="box1 row justify-content-between g-3 " style=" max-height: 800px;overflow-y: scroll;">
                    <div class="col-md-6">
                        <label for="inputGender" class="form-label">Mã khách hàng</label>
                        <select style="background-color: #F3F3F3;" required class="form-control">
                            <option value="" disabled selected>...chọn mã</option>
                            <option value="1">kh001</option>
                            <option value="2">kh002</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Tên khách hàng</label>
                        <input type="date" class="form-control" readonly>
                        <span class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Mã hợp đồng</label>
                        <input type="date" class="form-control"  readonly>
                        <span class="text-danger" ></span>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Mã loại hình dịch vụ</label>
                        <input type="date" class="form-control" readonly>
                        <span class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Mã biên bản lắp đặt</label>
                        <input type="date" class="form-control" readonly>
                        <span class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label for="inputDateStart" class="form-label">Số điện thoại</label>
                        <input class="form-control"  maxlength="11"  readonly>
                        <span class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label for="inputDateStart" class="form-label">Email</label>
                        <input class="form-control" type="email" placeholder="abc123@gmail.com" readonly>
                        <span class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label for="inputEmail" class="form-label">Nơi ở</label>
                        <textarea style="background-color: #F3F3F3;" class="form-control" readonly></textarea>
                        <span class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Mã nhân viên tạo dịch vụ</label>
                        <input type="date" class="form-control" readonly>
                        <span class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Mã hợp đồng mẫu</label>
                        <input type="date" class="form-control" readonly>
                        <span class="text-danger"></span>
                    </div>
                    <div class="col-md-12">
                        <label for="inputEmail" class="form-label">Địa chỉ lắp đặt cụ thể</label>
                        <textarea style="background-color: #F3F3F3;" class="form-control" required></textarea>
                        <span class="text-danger"></span>
                    </div>
                    <div class="col-md-5" style="margin: 40px auto;">
                        <button class="add_cus" type="submit">
                           Tạo hợp đồng
                        </button>
                    </div>
                </div>
            </div>
        </form>

    </div>

</div>