@model List<QuanLyHopDongVaKySo_API.ViewModels.DContractViewModel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    string userRole = Context.Request.HttpContext.Session.GetString("Role");
}
<div class="container-fluid">
    @if(userRole == "Admin")
    {
        Layout = "_AdminLayout";

        <div class=" block justify-between items-center p-4  mt-4 mb-6 bg-white rounded-2xl shadow-xl shadow-gray-200 lg:p-5 sm:flex">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <i class="ph-bold ph-house" style="font-size: 20px; margin: auto 5px;"></i>
                    <li class="breadcrumb-item"> <a>Trang chủ</a></li>
                    <li class="breadcrumb-item"> <a>Nhân viên kinh doanh</a></li>
                    <li class="breadcrumb-item"> <a>Quản lý hợp đồng</a></li>
                    <li class="breadcrumb-item active" aria-current="page"> Hợp đồng đã duyệt</li>
                </ol>
            </nav>
            <h1 class="typeHead">TẤT CẢ DANH SÁCH </h1>
            <div class="row">
                <input type="search" style="margin-left: 10px;" placeholder="Tìm kiếm hợp đồng hoàn thành" />
            </div>
        </div>

    }
    else
    {
        Layout = "_Layout";
        <div class=" block justify-between items-center p-4  mt-4 mb-6 bg-white rounded-2xl shadow-xl shadow-gray-200 lg:p-5 sm:flex">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <i class="ph-bold ph-house" style="font-size: 20px; margin: auto 5px;"></i>
                    <li class="breadcrumb-item"> <a>Trang chủ</a></li>
                    <li class="breadcrumb-item"> <a>Quản lý hợp đồng</a></li>
                    <li class="breadcrumb-item active" aria-current="page"> Hợp đồng đã duyệt</li>
                </ol>
            </nav>
            <h1 class="typeHead">TẤT CẢ DANH SÁCH </h1>
            <div class="row">
                <input type="search" style="margin-left: 10px;" placeholder="Tìm kiếm hợp đồng hoàn thành" />
            </div>
        </div>

    }
    <div class="listTable">
        <table class="table">
            <thead>
                <tr style="color: #8B909A;">
                    <th scope="col">ID</th>
                    <th scope="col">EMAIL</th>
                    <th scope="col">NGÀY ĐĂNG KÝ DỊCH VỤ</th>
                    <th scope="col">HỌ VÀ TÊN</th>
                    <th scope="col">LOẠI HỢP ĐỒNG ĐĂNG KÝ</th>
                    <th scope="col">TRẠNG THÁI</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                @foreach(var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id </th>
                        <td>@item.CustomerEmail</td>
                        <td>@item.DateDone</td>
                        <td>@item.CustomerName</td>
                        <td>@item.TypeOfService</td>
                        <td>
                            <div style="width: 5px; height: 5px; background-color: #00C9A7; border-radius: 50%; margin-right: 10px;"></div>
                            <span>@item.Status</span>
                        </td>
                        <td>
                            <a asp-controller="BusinessStaff" asp-action="DetailsContractEffect" asp-route-id="@item.Id">Chi tiết</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>