                    <span class="text-danger" asp-validation-for="ChargeNoticeAddress"></span>
                </div>
                <div class="col-12">
                    <label for="adInvoice" class="form-label" style="color: #525252;
        font-size: 18px;
        font-family: Joxt;
        font-style: normal;
        font-weight: 400;
        line-height: normal;
">Địa chỉ xuất hóa đơn</label>
                    <input style="background-color: #F3F3F3;" class="form-control" asp-for="BillingAddress" required>
