                                <span class="text-danger" asp-validation-for="BuisinessName"></span>
                            </div>
                            <div class="col-md-5" style="margin:0 auto;">
                                <label for="inputPosition" class="form-label">Chức vụ</label>
                                <input class="form-control" id="inputPosition" asp-for="Position">
