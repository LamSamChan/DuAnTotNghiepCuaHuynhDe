<div class="container-fluid">
    <div class="header">
        <div class="SearchBox">
            <ul class="horizontal-list" style="list-style: none; display:flex; padding: 0.5rem;">
                <li>
                    <div class="Search">
                        <i class="ph-bold ph-magnifying-glass"></i>
                        <input type="text" placeholder="Search.." />
                    </div>
                </li>
                <li>
                    <a>
                        <i class="ph-bold ph-bell"></i>
                    </a>

                </li>
                <li>
                    <a>
                        <i class="ph-bold ph-moon"></i>
                    </a>
                </li>
                <li>
                    <img src="o.jpg" />
                </li>
            </ul>
        </div>
    </div>
    <button class="addCus">
        <a asp-page="./AddCus">
            THÊM KHÁCH HÀNG MỚI
            <i class="ph-bold ph-user-plus"></i>
        </a>

    </button>
    <div class="listTable_Cus">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">HỌ VÀ TÊN</th>
                    <th scope="col">SĐT</th>
                    <th scope="col">EMAIL</th>
                    <th scope="col">ĐỊA CHỈ</th>
                    <th scope="col">TRẠNG THÁI HOẠT ĐỘNG</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                @foreach (var cus in Model.Customers)
                {
                    <tr>
                        <th scope="row">@cus.CustomerId.ToString().Substring(0,8)</th>
                        <td>@cus.FullName</td>
                        <td>@cus.PhoneNumber</td>
                        <td>@cus.Email</td>
                        <td>@cus.Address</td>
                        @if (@cus.IsLocked)
                        {
                            <td>Khoá</td>
                        }
                        else
                        {
                            <td>Bình thường</td>
                        }

                        <td>
                            <div class="row action">
                                <a asp-page="./DetailsCus"><i class="ph-bold ph-note-pencil"></i></a>
                            </div>
                        </td>
                        <td>
                            <a asp-page="./DetailsCus">Chi tiết</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>