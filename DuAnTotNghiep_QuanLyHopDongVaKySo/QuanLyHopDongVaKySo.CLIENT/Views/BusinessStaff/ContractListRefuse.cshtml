@model List<QuanLyHopDongVaKySo_API.ViewModels.PContractViewModel>
    @*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="container-fluid">
    <div class=" block justify-between items-center p-4  mt-4 mb-6 bg-white rounded-2xl shadow-xl shadow-gray-200 lg:p-5 sm:flex">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <i class="ph-bold ph-house" style="font-size: 20px; margin: auto 5px;"></i>
                <li class="breadcrumb-item"> <a>Trang chủ</a></li>
                <li class="breadcrumb-item"><a>Quản lý hợp đồng</a></li>
                <li class="breadcrumb-item active" aria-current="page"> Hợp đồng từ chối duyệt</li>
            </ol>
        </nav>
        <h1 class="typeHead">DANH SÁCH HỢP ĐỒNG BỊ TỪ CHỐI</h1>
        <div class="row">
            <input type="search" style="margin-left: 10px;" placeholder="Tìm kiếm hợp đồng bị từ chối" />
        </div>
    </div>
    <div class="listTable">
        <table class="table">
            <thead>
                <tr style="color: #8B909A;">
                    <th scope="col">ID</th>
                    <th scope="col">EMAIL</th>
                    <th scope="col">NGÀY ĐĂNG KÝ DỊCH VỤ</th>
                    <th scope="col">HỌ VÀ TÊN</th>
                    <th scope="col">LOẠI HỢP ĐỒNG ĐĂNG KÝ</th>
                    <th scope="col">TRẠNG THÁI</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                @foreach(var item in Model)
                {
                    <tr>
                        <th scope="row">@item.PContractID</th>
                        <td>@item.CustomerEmail</td>
                        <td>@item.DateCreated</td>
                        <td>@item.CustomerName</td>
                        <td>@item.TOS_ID</td>
                        <td>
                            <div style="background: rgba(250, 44, 44, 0.16); color:#FF000F;display: flex;align-items: center;justify-content: center;">
                                Từ chối
                            </div>
                        </td>
                        <td>
                            <a asp-action="DetailsContractRefuse" asp-controller="BusinessStaff" asp-route-id="@item.PContractID">Chi tiết</a>
                        </td>
                    </tr>
                }  
            </tbody>
        </table>
    </div>
</div>