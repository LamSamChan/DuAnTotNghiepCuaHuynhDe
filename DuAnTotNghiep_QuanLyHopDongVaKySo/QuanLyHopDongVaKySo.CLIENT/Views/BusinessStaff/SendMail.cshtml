<main>
	<div class="row" style="margin-top: 50px; margin-right: 200px;">
		<div class="col-12">
			<div class="email-rightbar">
				<div class="card">
					
					<div class="card-body">
						<h4 class="m-b-0"
							style="width: 512px; height: 52px; color: #2B3674; font-size: 24px; font-family: DM Sans; font-weight: 700; line-height: 42px; word-wrap: break-word">
							Soạn Email
						</h4>
						<div>
							<div class="mb-3">
								<input type="email" class="form-control" placeholder="To">
							</div>

							<div class="mb-3">
								<input type="text" class="form-control" placeholder="Subject">
							</div>
							<div class="mb-3">
								<div class="">
									<div id="editor">
									</div>
								</div>
							</div>

							<div class="d-flex mb-0">
								<div class="me-1">
									<button type="button" class="btn btn-success waves-effect waves-light">
										<i class="far fa-save"></i>
									</button>
								</div>
								<div class="me-1">
									<button type="button" class="btn btn-success waves-effect waves-light">
										<i class="far fa-trash-alt"></i>
									</button>
								</div>
								<div>
									<button class="btn btn-purple waves-effect waves-light">
										<span>Send</span> <i class="fab fa-telegram-plane ms-2"></i>
									</button>
								</div>
							</div>


						</div>

					</div>

				</div>


			</div> <!-- end Col-9 -->

		</div>

	</div><!-- End row -->

</main>

<script src="~/assetsEmail/libs/jquery/jquery.min.js"></script>
<script src="~/assetsEmail/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/assetsemail/js/ckeditor.js"></script>
	<script>
		ClassicEditor
			.create(document.querySelector('#editor'), {
				// toolbar: [ 'heading', '|', 'bold', 'italic', 'link' ]
			})
			.then(editor => {
				window.editor = editor;
			})
			.catch(err => {
				console.error(err.stack);
			});
	</script>

