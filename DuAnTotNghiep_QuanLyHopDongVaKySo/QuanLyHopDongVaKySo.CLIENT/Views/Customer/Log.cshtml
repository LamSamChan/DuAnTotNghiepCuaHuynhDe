@{
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- ICONS -->
    <script src="https://unpkg.com/@@phosphor-icons/web"></script>
    <style>
        body {
            background: linear-gradient(270deg, #00C6FF -2.85%, #6DD5ED 42.59%);
        }

        .form_login {
            display: flex;
            height: 100vh;
        }

        .side,
        .banner {
            width: 50%;
            height: 100%;
            justify-content: center;
            align-items: center;
            display: flex;
        }

        .side {
            flex-direction: column;
        }


        .form {
            width: 500px;
            height: 520px;
            z-index: 900;
            /*  border-radius: 46px;
                    background-color: rgba( 217, 217, 217, 0.3); */
        }

        h3 {
            display: flex;
            height: 123px;
            flex-direction: column;
            justify-content: center;
            color: #FFFF;
            text-align: center;
            font-style: normal;
            font-size: 35px;
            font-weight: 700;
            line-height: normal;
            margin: 0 auto;
        }

        .overlay {
            position: fixed;
            top: 0;
            right: 0;
            width: 50%;
            height: 100vh;
            background-color: #9D9D9D;
            opacity: 0.2;
        }

        div[class="mb-3"] {
            max-width: 400px;
            margin: 0 auto;
            color: #FFFF;
            font-size: 16px;
            font-style: normal;
            font-weight: 700;
            line-height: normal;
        }


        div[class="mb-3"] > button {
            width: 400px;
            margin: 0 auto;
            height: 50px;
            margin-top: 10px;
            border-radius: 10px;
            background: #2A65A7;
            color: #FFFF;
            font-weight: bold;
            border: none;
        }


        div[class="mb-3"] input {
            border-radius: 15px;
            background: #D9D9D9;
            height: 50px;
        }
    </style>
</head>
<body>
    <div class="form_login">
        <div class="overlay"></div>
        <div class="banner">
            <img src="~/Resource/Image/LOGO_WITHOUT_BG/1.png" style="width:900px;" />
        </div>
        <div class="side">
            <div class="form">
                <h3>XÁC THỰC KHÁCH HÀNG</h3>
                <div class="mb-3">
                    <label for="formGroupExampleInput" class="form-label">MẬT KHẨU HỢP ĐỒNG</label>
                    <input type="password" class="form-control" id="formGroupExampleInput" placeholder="***">
                </div>
                <div class="mb-3">
                    <button>
                        <a asp-area="" asp-page="/Customer/FormSignForCus" style="text-decoration:none;color:#FFFF;">
                            XÁC NHẬN
                        </a>
                    </button>
                </div>

            </div>
        </div>
    </div>

</body>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</html>
