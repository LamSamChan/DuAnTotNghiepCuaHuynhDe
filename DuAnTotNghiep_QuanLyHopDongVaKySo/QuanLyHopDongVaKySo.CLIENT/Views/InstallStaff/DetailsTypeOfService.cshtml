@model QuanLyHopDongVaKySo.CLIENT.ViewModels.VMDetailsTypeOfService
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    string tosID = HttpContextAccessor.HttpContext.Session.GetString("tosID");
    string userRole = Context.Request.HttpContext.Session.GetString("Role");
}
<style>
    .loading {
        position: absolute;
        z-index: 1;
        width: 100%;
        height: 100%;
        display: none;
        align-items: center;
        justify-content: center;
        background: rgba(0, 0, 0, 0.479);
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

        .loading img {
            width: 7rem;
        }
</style>
@section Scripts {
    <script>
        const iconLoading = document.getElementById("loading");

        const showLoading = () => {
            iconLoading.style.display = "flex";
        };

        const hideLoading = () => {
            iconLoading.style.display = "none";
        };

        const showLoading = () => {
            iconLoading.style.display = "flex";
        };
        const hideLoading = () => {
            iconLoading.style.display = "none";
        };


        const updatePosition = () => {
            showLoading(); // Show loading spinner when the button is clicked

            // You can perform additional logic here before or after the form submission
            // For example, submit the form programmatically
            document.querySelector('form').submit();

            // If you want to prevent the form from submitting immediately, you can remove the form submission line

            // Hide loading spinner after the form submission is complete
            setTimeout(() => {
                hideLoading(); // Hide loading icon after some time (replace this with your actual logic)
            }, 1000);
        };
        // jQuery is assumed to be available

        // Hàm để thực hiện Ajax và cập nhật dữ liệu
        function saveDevice(deviceId) {
            var device = {
                Device_ID: deviceId,
                DeviceName: $('#deviceName_' + deviceId).val(),
                DeviceStatus: $('#deviceStatus_' + deviceId).val(),
                DeviceQuantity: $('#deviceQuantity_' + deviceId).val(),
                TOS_ID: $('#tosId_' + deviceId).val()
            };

            $.ajax({
                url: '@Url.Action("EditDeviceAction")',
                type: 'PUT',
                contentType: 'application/json',
                data: JSON.stringify(device),
                success: function (result) {
                    if (!result.success) {
                        // SweetAlert for success
                        Swal.fire({
                            title: 'Cập nhật thiết bị thành công !.!',
                            icon: 'success',
                            confirmButtonColor: '#3085d6',
                            confirmButtonText: 'OK'
                        }).then((result) => {
                            // Redirect to the desired page on success
                            if (result.isConfirmed) {
                                showLoading(); // Show loading icon
                                setTimeout(() => {
                                    hideLoading(); // Hide loading icon after some time (replace this with your actual logic)
                                }, 1000); // Adjust the time as needed
                                var redirectToUrl = '@Url.Action("DetailsTypeOfService", "InstallStaff")?tosID=' + device.TOS_ID;
                                window.location.href = redirectToUrl;
                            }
                        });
                    } else {
                        // SweetAlert for failure
                        Swal.fire({
                            title: 'Error!',
                            text: 'Cập nhật thiết bị thất bại !',
                            icon: 'error',
                            confirmButtonColor: '#d33',
                            confirmButtonText: 'OK'
                        });
                    }
                },
                error: function () {
                    console.error('Lỗi khi gửi yêu cầu.');
                    Swal.fire({
                        title: 'Error!',
                        text: 'An unexpected error occurred.',
                        icon: 'error',
                        confirmButtonColor: '#d33',
                        confirmButtonText: 'OK'
                    });
                }
            });
        }
    </script>
}

