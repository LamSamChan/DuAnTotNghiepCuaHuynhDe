<div class="container-fluid">
    <button class="return">
        <i class="ph-bold ph-arrow-left"></i>
    </button>
    <div class="row" style=" margin: 40px auto; height:100%; border-radius:16px;">
        <div class="col-md-5">
            <div class="box1">
                <div class="avatar">
                    <img src="~/Resource/Image/LOGO_WITHOUT_BG/1.png" />
                </div>
                <form class="row g-3" style="width:500px; margin: 0 auto;">
                    <div class="col-md-6">
                        <label class="form-label">Biên bản lắp đặt</label>
                    </div>
                    <div class="col-md-6">
                        <button class="btn_details">
                            CHI TIẾT
                        </button>
                    </div>
                    <div class="col-12">
                        <label for="inputName" class="form-label">Họ và tên</label>
                        <input type="text" class="form-control" id="inputName" placeholder="abc">
                    </div>
                    <div class="col-12">
                        <label for="inputEmail" class="form-label">Email</label>
                        <input type="email" class="form-control" id="inputEmail" placeholder="abc@gmail.com">
                    </div>
                    <div class="col-12">
                        <label for="inputCCCD" class="form-label">CCCD/CMND</label>
                        <input type="text" class="form-control" id="inputCCCD" placeholder="CCCD/CMND">
                    </div>
                    <div class="col-md-6">
                        <label for="inputDateStart" class="form-label">Ngày cấp</label>
                        <input type="date" class="form-control" id="inputDateStart">
                    </div>
                    <div class="col-md-6">
                        <label for="inputDateEnd" class="form-label">Ngày hết hạn</label>
                        <input type="date" class="form-control" id="inputDateEnd">
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="inforStaff">
        <h4 style="color: #4318FF;">
            Nhân viên chiệu trách nhiệm lắp
        </h4>
        <form class="row g-3">
            <div class="col-md-6">
                <label for="inputName" class="form-label">Họ và tên</label>
                <input type="text" class="form-input" id="inputName" placeholder="Họ và tên">
            </div>
            <div class="col-md-3">
                <label for="inputGender" class="form-label">Giới tính</label>
                <select id="inputGender" class="form-select" style="background-color:transparent;">
                    <option selected>Nam</option>
                    <option>Nữ</option>
                </select>
            </div>
            <div class="col-md-6">
                <label for="inputCCCD" class="form-label">CCCD/CMND</label>
                <input type="text" class="form-input" id="inputCCCD" placeholder="CCCD/CMND">
            </div>
            <div class="col-md-6">
                <label for="inputPhone" class="form-label">Số điện thoại</label>
                <input type="text" class="form-input" id="inputPhone" placeholder="Số điện thoại">
            </div>
            <div class="col-md-6">
                <label for="inputEmail4" class="form-label">Địa chỉ Email</label>
                <input type="email" class="form-input" id="inputEmail4" placeholder="Địa chỉ Email">
            </div>
            <div class="col-md-6">
                <label for="inputAddress" class="form-label">Nơi ở</label>
                <input type="text" class="form-input" id="inputAddress" placeholder="Địa chỉ nơi ở">
            </div>
        </form>
        <h4 style="color: #4318FF; padding-top:30px;">
            Hướng dẫn chi tiết
        </h4>
        <div class="col-md-12">
            <label for="inputAddress2" class="form-label">Địa chỉ lấp cụ thể</label>
            <input type="text" class="" id="inputAddress2" style="border-radius: 20px;background: #D9D9D9; width: 99%; border: none;border: none;outline: none;height: 60px;">
        </div>
        <div class="col-md-12" style="padding-top:10px;">
            <label for="inputList" class="form-label">Danh sách công việc cụ thể</label>
            <textarea type="text" class="" id="inputList" style="border-radius: 10px;background: #D9D9D9; width: 99%; border: none;border: none;outline: none;height: 160px;"></textarea>
        </div>
        <div class="col-md-12 " id="custom_center">
            <button class="confirm">
                XÁC NHẬN HOÀN TẤT BIÊN BẢN LẮP ĐẶT
            </button>
        </div>
    </div>
</div>