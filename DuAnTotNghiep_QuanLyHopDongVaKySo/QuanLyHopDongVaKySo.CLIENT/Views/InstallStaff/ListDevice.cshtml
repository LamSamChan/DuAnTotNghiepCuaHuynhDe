        <div class="listTable" style="height:400px;" @* style="background-color:white; box-shadow: 0 0 5px rgba(0, 0, 0, 0.5); min-height:700px" *@>
            <table class="table">
                <thead>
                    <tr style="color: #8B909A;">
                        <th scope="col">HÀNH ĐỘNG</th>
                        <th scope="col">ID</th>
                        <th scope="col">TÊN THIẾT BỊ</th>
