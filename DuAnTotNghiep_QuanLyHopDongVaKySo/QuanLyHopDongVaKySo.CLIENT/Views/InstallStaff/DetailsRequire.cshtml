                                        <span class="visually-hidden">Previous</span>
                                    </button>
                                    <button style="margin: auto;background-color: black;font-size: 100px; width: 50px;height: 100px;" class="carousel-control-next" type="button" data-bs-target="#myCarouselModal1" data-bs-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true" style="width:20px; height:20px;"></span>
                                        <span class="visually-hidden">Next</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="inforCus col-5 mt-4" style="max-height:800px; overflow-y: scroll; ">
            <h4 class="typeHead">
                Thông tin khách hàng
            </h4>
               <form class="row g-3" style="max-width:950px;">
            <div class="col-md-6">
            <label for="inputName" class="form-label">Họ và tên</label>
            <input type="text" class="form-input" id="inputName" placeholder="Họ và tên" asp-for="@Model.Customer.FullName">
            </div>
            <div class="col-md-3">
            <label for="inputState" class="form-label">Giới tính</label>
            @if (Model.Customer.Gender == 1)
            {
            <input type="text" class="form-input" id="inputName" readonly value="Nam">
            }
            else
            {
            <input type="text" class="form-input" id="inputName" readonly value="Nữ">
            }
            </div>
            <div class="col-md-6">
            <label for="inputCCCD" class="form-label">CCCD/CMND</label>
            <input type="text" class="form-input" id="inputCCCD" placeholder="CCCD/CMND" asp-for="@Model.Customer.Identification">
            </div>
            <div class="col-md-5">
            <label for="inputPhone" class="form-label">Số điện thoại</label>
            <input type="text" class="form-input" id="inputPhone" placeholder="Số điện thoại" asp-for="@Model.Customer.PhoneNumber">
            </div>
            <div class="col-md-6">
            <label for="inputEmail4" class="form-label">Địa chỉ Email</label>
            <input type="email" class="form-input" id="inputEmail4" placeholder="Địa chỉ Email" asp-for="@Model.Customer.Email">
            </div>
            <div class="col-md-5">
            <label for="inputAddress" class="form-label">Nơi ở</label>
            <input type="text" class="form-input" id="inputAddress" placeholder="Địa chỉ nơi ở" asp-for="@Model.Customer.Address">
            </div>
            <div class="col-md-6">
            <label for="inputEmail4" class="form-label">Mã hợp đồng</label>
            <input type="email" class="form-input" id="inputEmail4" placeholder="IDxxx" asp-for="@Model.DoneContract.Id">
            </div>
            <div class="col-md-5">
            <label for="inputAddress" class="form-label">Loại dịch vụ đã đăng ký</label>
            <input type="text" class="form-input" id="inputAddress" placeholder="WIFI" asp-for="@Model.DoneContract.TypeOfService">
            </div>
            <div class="col-md-6">
            <label for="inputEmail4" class="form-label">Ngày hiệu lực</label>
            <input type="email" class="form-input" id="inputEmail4" placeholder="IDxxx" asp-for="@Model.DoneContract.DateDone">
            </div>
            <div class="col-md-5">
            <label for="inputAddress" class="form-label">Mã Biên bản lắp </label>
            <input type="text" class="form-input" id="inputAddress" placeholder="ID" asp-for="@Model.DoneContract.DMinuteID">
            </div>
            
            </form> 
        </div>
    </div>

</div>
