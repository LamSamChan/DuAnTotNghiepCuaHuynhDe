<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuanLyHopDongVaKySo.CLIENT</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />


    <script src="~/lib/libs/jquery/jquery-3.6.0.min.js"></script>

    <!-- ICONS -->
    <script src="https://unpkg.com/@@phosphor-icons/web"></script>
</head>
<body>
    <header style="background-color:#001529; position:fixed; width:100%; top:0; left:0; z-index:9999;">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow">
            <div class="container-fluid">
                <div class="logo">
                    <img style="width:40px;" src="~/Resource/Image/LOGO_WITHOUT_BG/2.png" />
                    <a style="color:white; font-weight:bold;" class="navbar-brand" >TEACHSEAL</a>
                </div>
                <div class="Search_All">
                    <i class="ph-bold ph-magnifying-glass"></i>
                    <input type="text" placeholder="Search.." />
                </div>
            </div>
            <ul class="horizontal-list" style="list-style: none; display:flex; margin-bottom: 0; color:white;">
                <li>
                    <a>
                        <i class="ph-bold ph-bell"></i>
                    </a>

                </li>
                <li>
                    <a>
                        <i class="ph-bold ph-moon"></i>
                    </a>
                </li>
                <li>
                    <img src="/Resource/Image/Avatar.jpg"  style="width: 40px; height: 40px; border-radius: 100%;"/>
                </li>
            </ul>
        </nav>
    </header>
    @{
        var userRole = TempData["Role"] as string;
    }

    <div class="contai">
        @if (!string.IsNullOrEmpty(userRole))
        {
            Html.RenderPartial("_SidebarPartialView", userRole);
        }
      <main style="margin-left:270px; margin-top:50px;" role="main" class="pb-3" >
            @RenderBody()
      </main>
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
