        <div class="modal fade" id="EditEquid" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="staticBackdropLabel">Chỉnh sửa thiết bị lắp</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form class="row justify-content-around" style=" margin: 0 auto; height:300px">
                            <div class="col-md-6">
                                <label class="form-label">Id</label>
                                <input class="form-control" id="inputName" placeholder="Id" readonly>
                                <span class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Tên thiết bị</label>
                                <input class="form-control" id="inputName" placeholder="Tên thiết bị" required>
                                <span class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label for="inputName" class="form-label">Tình trạng</label>
                                <input class="form-control" required>
                                <span class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label for="inputGender" class="form-label">Mã hợp loại dịch vụ</label>
                                <select style="background-color: #F3F3F3;" required class="form-control">
                                    <option value="" disabled selected>...chọn mã hợp đồng</option>
                                    <option value="1">HD3333</option>
                                    <option value="2">NHD001</option>
                                </select>
                                <span class="text-danger"></span>
                            </div>
                            <div class="col-md-6" style="display: flex;align-items: center;justify-content: center;">
                                <button class="btn-addRole" type="submit" style="width: 100%;">
                                    LƯU THÔNG TIN
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function showTab(tabId) {
        // Ẩn tất cả các nội dung tab
        var tabContents = document.querySelectorAll('.tab-content');
        tabContents.forEach(function (content) {
            content.classList.remove('active');
        });

        // Ẩn tất cả các tab-button
        var tabButtons = document.querySelectorAll('.tab-button');
        tabButtons.forEach(function (button) {
            button.classList.remove('active');
        });

        // Hiển thị nội dung của tab được chọn và làm cho tab-button trở nên active
        var selectedTab = document.getElementById(tabId);
        selectedTab.classList.add('active');

        var selectedButton = document.querySelector('[onclick="showTab(\'' + tabId + '\')"]');
        selectedButton.classList.add('active');
    }
</script>