                    </a>
                </li>
                <li>
                    <img src="o.jpg" />
                </li>
            </ul>
        </div>
    </div>
    <div style="margin-top: 40px;">
        <section class="gallery min-vh-100">
            <div class="container-lg">
                <div class="row gy-4 row-cols-1 row-cols-sm-2 row-cols-md-3">
                    <div class="col">
                        Ảnh chữ ký 1                       
                         @if (Model.ImageSignature1 != null)
                            {
                                <img src="~/@Model.ImageSignature1" alt="@Model.ImageSignature1" style="width:300px; height:300px;" />
                            }
                            else
                            {
                            <img src="~/Test/img/1.jpg" class="gallery-item" alt="gallery">
                            }
                    </div>
                    <div class="col">
                        Ảnh chữ ký 2
                        @if (Model.ImageSignature1 != null)
                        {
                            <img src="~/@Model.ImageSignature1" alt="@Model.ImageSignature1" style="width:300px; height:300px;" />
                        }
                        else
                        {
                            <img src="~/Test/img/2.jpg" class="gallery-item" alt="gallery">
                        }
                    </div>
                    <div class="col">
                        Ảnh chữ ký 3
                        @if (Model.ImageSignature1 != null)
                        {
