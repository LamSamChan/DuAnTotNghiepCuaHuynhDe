                        else
                        {
                            <img src="~/Test/img/3.jpg" class="gallery-item" alt="gallery">
                        }
                    </div>
                    <div class="col">
                        Ảnh chữ ký 4
                        @if (Model.ImageSignature1 != null)
                        {
                            <img src="~/@Model.ImageSignature1" alt="@Model.ImageSignature1" style="width:300px; height:300px;" />
