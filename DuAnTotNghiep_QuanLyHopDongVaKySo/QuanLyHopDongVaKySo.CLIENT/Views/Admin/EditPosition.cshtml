@model QuanLyHopDongVaKySo_API.Models.Position
@{
    Layout = "_AdminLayout";
}
<div class="container-fluid">
    <div class=" block justify-between items-center p-4  mt-4 mb-6 bg-white rounded-2xl shadow-xl shadow-gray-200 lg:p-5 sm:flex">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <i class="ph-bold ph-house" style="font-size: 20px; margin: auto 5px;"></i>
                <li class="breadcrumb-item"> <a>Trang chủ</a></li>
                <li class="breadcrumb-item"><a>Quản lý chức danh</a></li>
                <li class="breadcrumb-item active" aria-current="page"> Danh sách chức danh</li>
            </ol>
        </nav>
        <h1 class="typeHead">CHỈNH SỬA CHỨC DANH</h1>
    </div>
    <div style="margin-top: 40px;">
        <form class="row justify-content-around" style=" margin: 0 auto;" asp-action="UpdatePosition" asp-controller="Admin">
            <div class="col-md-5">
                <div class="box1 row justify-content-between g-3 " style="max-height: 800px;overflow-y: scroll; height: 300px; margin: 40px auto;">
                    <div class="col-md-12">
                        <label class="form-label" asp-for="PositionID">Id</label>
                        <input class="form-control" readonly asp-for="PositionID">
                        <span class="text-danger" asp-validation-for="PositionID"></span>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label" asp-for="PositionName">Tên chức danh</label>
                        <input class="form-control" id="inputName" asp-for="PositionName" required>
                        <span class="text-danger" asp-validation-for="PositionName"></span>
                    </div>
                    <div class="col-md-6">
                        <label class="mb-3 mr-1" for="Status" asp-for="isHidden">Trạng thái: </label>
                        <div>
                            <input type="radio" class="btn-check " id="false" asp-for="isHidden" value="false" autocomplete="off" required>
                            <label class="btn btn-sm btn-outline-success text-light" id="false-label" for="false">Hiển thị</label>

                            <input type="radio" class="btn-check " id="true" asp-for="isHidden" value="true" autocomplete="off" required>
                            <label class="btn btn-sm btn-outline-danger text-light" id="true-label" for="true">Ẩn</label>
                        </div>
                    </div>
                    <div class="col-md-6" style="margin:auto;">
                        <button class="add_cus" type="submit">
                            Cập nhật
                            @if (TempData["SweetType"] != null && TempData["SweetIcon"] != null && TempData["SweetTitle"] != null)
                            {
                                <script>
                                    document.addEventListener('DOMContentLoaded', function () {
                                        var sweetData = {
                                            title: '@TempData["SweetTitle"]',
                                            text: '@TempData["SweetText"]',
                                            icon: '@TempData["SweetIcon"]'
                                        };

                                        Swal.fire({
                                            title: sweetData.title,
                                            text: sweetData.text,
                                            icon: sweetData.icon,
                                            showCancelButton: false,
                                            allowOutsideClick: false,
                                            confirmButtonColor: "green",
                                            confirmButtonText: "Ok"
                                        }).then(function () {
                                            // Handle any additional logic after the SweetAlert is closed.
                                        });
                                    });
                                </script>
                            }

                        </button>
                    </div>
                </div>
            </div>
            @**@
        </form>
    </div>
</div>
<script>
    // Hàm hiển thị message
    function showSuccessMessage() {
        $("#msg_success_filled").ej2Message.show();
        // Ẩn message sau một khoảng thời gian, ví dụ sau 5 giây
        setTimeout(function () {
            $("#msg_success_filled").ej2Message.hide();
        }, 5000);
    }
</script>