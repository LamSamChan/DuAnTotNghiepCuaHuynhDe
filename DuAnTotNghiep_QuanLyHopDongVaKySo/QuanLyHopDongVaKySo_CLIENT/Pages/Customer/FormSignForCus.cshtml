@page
@model QuanLyHopDongVaKySo_CLIENT.Pages.Customer.FormSignForCusModel
@{
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- ICONS -->
    <script src="https://unpkg.com/@@phosphor-icons/web"></script>
    <style>
        body{
            background: linear-gradient(106deg, rgba(44, 168, 221, 0.88) 1.91%, rgba(7, 119, 207, 0.88) 97.8%);
            margin: 0 auto
        }
        .contai{
            width: 1748px;
            height: 891px;
            border-radius: 20px;
            background: var(--secondary-primary-white, #FFF);
            margin: 20px auto;
        }
        .img_Sig{
            width: 281px;
            height: 221px;
            margin: 0 auto;
        }
        .form_SignedCus{
            width:100%;
            height: 800px;
            margin: 10px auto;
        }
        .form_SignedCus .col-4{

            width: 400px;
            height:100%;
            border-radius: 40px;
            background: rgba(217, 217, 217, 0.50);
            box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
        }

        .signing-Zone{
            width: 90%;
            height: 300px;
            background-color: #FFF;
            stroke-width: 0.555px;
            stroke: #B9C2C8;
            margin: 0 auto;
            border-radius: 10px;
        }
        .del{
            display: flex;
            width: 103.471px;
            height: 28.286px;
            padding: 0px 8px;
            justify-content: center;
            align-items: center;
            flex-shrink: 0;
            border-radius: 10px;
            background: #FC6767;
            border: none;
            color: #FFFF;
        }
        .Sign{
            display: flex;
            width: 103.471px;
            height: 28.286px;
            padding: 0px 8px;
            justify-content: center;
            align-items: center;
            flex-shrink: 0;
            border-radius: 10px;
            background: #2CA8DD;
            border: none;
            color: #FFFF;
            
        }

        .access{
            display: flex;
            width: 240px;
            height: 40px;
            padding: 8px 12px;
            justify-content: space-between;
            align-items: center;
            flex-shrink: 0;
            border-radius: 50px;
            background: #2CDDBD;
            border: none;
            color: #FFFF;
            font-weight: bold;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <header style="background-color:#001529;">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow">
            <div class="container-fluid">
                <div class="logo">
                    <img style="width:40px;" src="~/Resource/Image/LOGO_WITHOUT_BG/2.png" />
                    <a style="color:white; font-weight:bold;" class="navbar-brand" asp-area="" asp-page="/Index">TEACHSEAL</a>
                </div>
            </div>
        </nav>
    </header>
   <div class="container-fluid">
       <div class="contai">
            <h4 style="color: #4318FF; padding-left:80px; padding-top:20px;">Xác nhận ký nhân viên lắp đặt</h4>
            <div class="row justify-content-around text-center form_SignedCus">
                <div class="col-4">
                    <div class="img_Sig">
                        <img src="/Resource/Image/LOGO_WITHOUT_BG/1.png" style="width:100%;" />
                    </div>
                    <h6 style="color: #4318FF; text-align:start; margin-top:10px;">Vùng ký thử cho khách hàng</h6>
                    <div class="signing-Zone">
                    </div>
                    <div class="row justify-content-around" style="padding:35px 0; width:100%;">
                        <div class="col-3">
                            <button class="del">
                                XOÁ
                            </button>
                        </div>
                        <div class="col-3">
                            <button class="Sign">
                                KHÁCH KÝ
                            </button>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-6">
                            <button class="access">
                                XÁC NHẬN KÝ
                            </button>
                        </div>
                    </div>
                </div>
                <div class="col-8">
                    <embed id="drawArea" src="path_to_your_pdf.pdf" type="application/pdf" style="width: 100%; height:100%;">
                </div>
            </div>
       </div>
   </div>
</body>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</html>